<turbo-frame id="checklists">
<ul
  class="list-none"
  data-controller="sortable"
  data-sortable-animation-value="250"
  data-sortable-param-name-value="checklist[position]"
  data-sortable-handle-value=".handle"
  >
  <% @checklists.each do |checklist| %>
    <li 
      data-sortable-update-url="<%= project_checklist_path(@project, checklist) %>"
      class="bg-gray-200 ring-2 ring-gray-100 rounded-md py-2 px-3 mb-2">

      <div class="flex justify-between">
        <h6 class="font-bold mb-1"> <%= checklist.title %> </h6>

        <div class="handle text-gray-400 hover:text-gray-600 cursor-pointer px-1">
          <%= heroicon('switch-vertical') %>
        </div>
      </div>
    </li>
  <% end %> 
</ul>

<%= link_to icon_text("Tillbaka", 'chevron-left'), project_path(@project), class: 'btn btn-silver btn-sm' %>

</turbo-frame>