<div class="ring-1 ring-gray-200 shadow overflow-hidden rounded-lg my-4">

  <div class="bg-slate-50 px-2 py-3 sm:px-4">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      <%= reportable.title %>
    </h3>
  </div>

  <div class="border-t border-gray-200 px-4 py-5 sm:p-0 bg-white">
    <dl class="text-sm sm:divide-y sm:divide-gray-200">
      <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
        <dt class=" font-medium text-gray-500">Summa</dt>
        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
          (
           <%= number_to_currency reportable.amount.round(0) %> AK - 
           <%= number_to_currency reportable.costs_by_contractors.round(0) %> UE
          ) * <%= number_to_percentage (reportable.fixed_fee * 100).round(0) %> 
          <b>= <%= number_to_currency reportable.payout_fixed %></b>
        </dd>
      </div>
    </dl>
  </div>

  <div class="border-t border-gray-200 px-4 py-5 sm:p-0 bg-white">
    <dl class="text-sm sm:divide-y sm:divide-gray-200">
      <div class="p-5">
        <div class="overflow-x-auto shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
          <table class="table-auto min-w-full divide-y divide-gray-300 text-sm">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="whitespace-nowrap px-4 py-2 text-left font-semibold text-gray-900">Person</th>
                <th scope="col" class="whitespace-nowrap px-2 py-2 text-left font-semibold text-gray-900">Tid</th>
                <th scope="col" class="whitespace-nowrap px-2 py-2 text-left font-semibold text-gray-900">Andel</th>
                <th scope="col" class="whitespace-nowrap px-2 py-2 text-left font-semibold text-gray-900">Avr√§kning</th>
              </tr>
            </thead>
            <tbody class=" align-top">
                <% Report.by_workers(reportable).map(&:reportee).uniq.each do |reportee| %>
                <% calc = Bonus::Fixed.for(reportable, reportee) %>
                <tr class="border-t border-gray-100"> 
                  <td class="whitespace-nowrap px-4 py-2 text-gray-600">
                    <%= reportee.user.display_name  %>
                    <span class="text-xs text-gray-400"><%= reportee.title %></span>
                  </td>
                  <td class="whitespace-nowrap p-2 text-gray-600">
                    <%= format_hours calc.hours %> tim
                  </td>
                  <td class="whitespace-nowrap text-sm p-2 text-gray-600">
                    <%= number_to_percentage calc.bonus_percent * 100 %>
                  </td>
                  <td class="whitespace-nowrap text-sm p-2 text-gray-600">
                    <%= number_to_currency calc.total.round(0) %>
                  </td>
                </tr>
                <% end %>
            </tbody>
            <tfoot class="bg-gray-50">
              <tr class="font-medium text-md text-gray-900"> 
                  <td class="whitespace-nowrap px-4 py-2">Summa</td>
                  <td class="whitespace-nowrap p-2"> <%= format_hours(Bonus::Fixed.for(reportable, nil).worker_hours)%> tim </td>
                  <td class="whitespace-nowrap p-2"></td>
                  <td class="whitespace-nowrap p-2"> <%= number_to_currency(Bonus::Fixed.for(reportable, nil).total) %> </td>
                </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </dl>
  </div>
</div>
