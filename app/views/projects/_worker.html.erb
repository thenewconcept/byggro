<div class="mt-2 text-sm text-indigo-800 sm:mt-4 bg-indigo-100 py-1 px-2 rounded-md">
  <p class="my-1"> <%= heroicon('document-report') %> <b class="pr-4">Projektestimat</b> <%= project.hours_target.round(2) %> tim </p>
</div>

<div class="mt-2 text-sm text-green-800 sm:mt-4 bg-green-100 py-1 px-2 rounded-md">
  <p class="my-1"> <%= heroicon('clock') %> <b class="pr-4">Projektrapport</b> <%= project.hours_reported.round(2) %> tim </p>
</div>

<div class="mt-2 text-sm text-yellow-800 sm:mt-4 bg-yellow-100 py-1 px-2 rounded-md">
  <p class="my-1"> <%= heroicon('clock', variant: :outline) %> <b class="px-1">Dina timmar</b> <%= project.reports.where(worker: Current.user.worker).sum(&:time_in_hours).round(2) %> tim </p>
  <p class="my-1"> <%= heroicon('cash', variant: :outline) %> <b class="px-1"><%= t("project.bonus.#{project.bonus}") %></b> <%= number_to_currency Bonus::Calculator.for(project).bonus_for(Current.user.worker) %> </p>
</div>