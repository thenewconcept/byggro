<li>
  <a href="<%= project_path(project) %>" class="block hover:bg-gray-50">
    <div class="px-4 py-4">

      <div class="flex items-center justify-between">
        <h2 class="text-xl font-medium text-gray-900"><%= project.title %></h2>
      </div>

      <div class="mt-2 sm:flex sm:justify-between">
        <div class="sm:flex text-gray-500">
          <div class="mt-2">
            <%= icon_badge(project.adress, 'map', class: 'slate') if project.adress.present? %>
            <%= icon_badge "~ #{project.hours_reported} tim", 'clock', class: 'green' unless project.hours_reported.zero? %>
            <%= icon_badge "#{project.hours_estimated} tim", 'flag', class: 'indigo' unless project.hours_estimated.zero? %>
          </div>
        </div>

        <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
          <%= heroicon('calendar', variant: :outline, options: { class: 'mr-1 text-gray-400' }) %>
          <p>
            <time class="capitalize" datetime="<%= project.primary_date %>">
              <%= l(project.primary_date, format: :short) %>
            </time>
            <% if project.due_at %>
              â€” <time class="capitalize" datetime="<%= project.due_at %>">
                  <%= l(project.due_at, format: :short) %>
                </time>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </a>
</li>