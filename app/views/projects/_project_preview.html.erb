<li>
  <a href="<%= project_path(project) %>" class="block hover:bg-gray-50">
    <div class="px-4 py-4 sm:px-6">

      <div class="flex items-center justify-between">
        <h2 class="font-medium text-gray-800 truncate"><%= project.title %></h2>
        <div class="ml-2 flex-shrink-0 flex">
          <%= status_badge(project.status) %>
        </div>
      </div>

      <div class="mt-2 sm:flex sm:justify-between">
        <div class="sm:flex text-gray-500">
          <p class="flex items-center text-sm">
            <%= heroicon('map', options: { class: 'flex-shrink-0 mr-1.5 h-5 w-5' }) %>
            <%= project.adress %>
          </p>
        </div>

        <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
          <%= heroicon('calendar', options: { class: 'mr-1 text-gray-400' }) %>
          <p>
            <time datetime="<%= project.primary_date %>"><%= l project.primary_date, format: :short %></time>
          </p>
        </div>
      </div>
    </div>
  </a>
</li>