<%= form_with(model: [@payment.project, @payment], class: "contents") do |f| %>
  <%= f.hidden_field :project_id %>

  <%= f.date_field :payed_on, required: true, class: 'text-sm mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  <%= f.number_field :amount, placeholder: 'Summa', class: 'text-sm mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  <%= f.text_field :note, placeholder: 'Notering', class: 'text-sm mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md' %>
  <%= f.submit 'Spara', class: "text-sm mt-2 inline-flex items-center px-2 py-1 border border-transparent shadow-sm text-xs leading-4 font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <%= link_to 'Avbryt', project_path(@payment.project), target: '_top', class: "text-sm mt-2 inline-flex items-center px-2 py-1 border border-transparent shadow-sm text-xs leading-4 font-medium rounded-md text-gray-500 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-200" if @payment.project %>
<% end %>

<div class="float-right">
  <%= button_to icon_text('Ta bort', 'trash'), [@payment.project, @payment], method: :delete, class: "my-3 text-xs text-gray-400 hover:text-gray-500" if policy(@payment).destroy? %>
</div>