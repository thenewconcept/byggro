<div class="bg-slate-50 overflow-hidden shadow rounded-lg divide-y divide-gray-200">
  <div class="px-4 py-5 sm:px-6">   
    <h3 class="text-2xl leading-6 font-bold text-gray-900 my-4">Teamet</h3>

    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% @users.employees.each do |user| %>
      <li id="<%= dom_id(user) %>"class="col-span-1 flex flex-col text-center bg-white rounded-lg shadow divide-y divide-gray-200">
        <div class="flex-1 flex flex-col py-6 px-8 hover:bg-slate-50 rounded-lg">
          <%= link_to user_path(user) do %>
            <%= avatar_for(user) %>

            <h3 class="mt-6 text-gray-900 text-md font-medium">
              <%= user.display_name %>
            </h3>

            <dl class="mt-1 flex-grow flex flex-col justify-between overflow-hidden">
              <dt class="sr-only">Title</dt>
              <dd class="text-gray-500 text-sm"><%= user.title %></dd>
              <dt class="sr-only">Role</dt>
            </dl>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>   
  </div>


  <div class="px-4 py-5 sm:px-6">   
    <h3 class="text-2xl leading-6 font-bold text-gray-900 my-4">Externa</h3>
    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% @users.contractors.each do |user| %>
      <li id="<%= dom_id(user) %>"class="col-span-1 flex flex-col text-center bg-white rounded-lg shadow divide-y divide-gray-200">
        <div class="flex-1 flex flex-col py-6 px-8 hover:bg-slate-50 rounded-lg">
          <%= link_to user_path(user) do %>
            <%= avatar_for(user) %>

            <h3 class="mt-6 text-gray-900 text-md font-medium">
              <%= user.display_name %>
            </h3>

            <dl class="mt-1 flex-grow flex flex-col justify-between overflow-hidden">
              <dt class="sr-only">Title</dt>
              <dd class="text-gray-500 text-sm"><%= user.title %></dd>
              <dt class="sr-only">Role</dt>
            </dl>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>   
  </div>
</div>


