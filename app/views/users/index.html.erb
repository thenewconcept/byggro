<div class="bg-slate-50 overflow-hidden shadow rounded-lg divide-y divide-gray-200">
  <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Teamet</h3>
  </div>
  <div class="px-4 py-5 sm:px-6">   
    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% @users.each do |user| %>
      <li class="col-span-1 flex flex-col text-center bg-white rounded-lg shadow divide-y divide-gray-200">
        <div class="flex-1 flex flex-col p-8 hover:bg-slate-50 rounded-lg">

        <%= link_to user_path(user) do %>

          <%= avatar_for(user) %>

          <h3 class="mt-6 text-gray-900 text-md font-medium">
            <%= user.display_name %>
          </h3>

          <dl class="mt-1 flex-grow flex flex-col justify-between">
            <dt class="sr-only">Title</dt>
            <dd class="text-gray-500 text-sm"><%= user.title %></dd>
            <dt class="sr-only">Role</dt>
          </dl>
        <% end %>

        <%= button_to 'Switch', switch_path(id: user.id), class: "mt-2 text-sm inline-flex items-center px-2 py-1 border border-transparent shadow-sm text-xs leading-4 font-medium rounded-md text-gray-500 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-100" if policy(user).create? %>
        </div>
      </li>
      <% end %>
    </ul>   
  </div>
</div>


