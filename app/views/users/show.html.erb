<div class="bg-white overflow-hidden shadow rounded-md divide-y divide-gray-200 pb-5">
  <article>
    <!-- Profile header -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between">
      <h1 class="mt-8 text-2xl font-bold text-gray-900 truncate"><%= @user.display_name %></h1>
      <div class="mt-8">
        <%= link_to edit_user_path(@user), class: 'btn-silver' do %>
          <%= icon_text 'Uppdatera', 'pencil' %>
        <% end if policy(@user).update? %>
      </div>
    </div>

    <!-- Tabs -->
    <div class="mt-6 sm:mt-2 2xl:mt-5">
      <div class="border-b border-gray-200">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <!-- Current: "border-pink-500 text-gray-900", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->
            <a href="#" class="border-pink-500 text-gray-900 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" aria-current="page"> Information </a>
            <!-- <a href="#" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"> Rapporter </a> -->
          </nav>
        </div>
      </div>
    </div>

    <!-- Description list -->
    <div class="mt-6 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <dl class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-4">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Titel</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @user.profile.title %></dd>
        </div>

        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Epost</dt>
          <dd class="mt-1 text-sm text-indigo-800"><%= mail_to @user.email %></dd>
        </div>

        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Placering</dt>
          <dd class="mt-1 text-sm text-gray-900">GÃ¶teborg</dd>
        </div>

        <div class="col-span-2 sm:col-span-4">
          <dt class="text-sm font-medium text-gray-500">Presentation</dt>
          <dd class="my-1 max-w-prose text-sm text-gray-900 space-y-5">
            <p><%= simple_format @user.presentation %></p>
          </dd>
        </div>
      </dl>
    </div>
  </article>
</div>
