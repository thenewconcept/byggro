<div class="bg-white overflow-hidden shadow rounded-md divide-y divide-gray-200 pb-5">
  <article>
    <!-- Profile header -->
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between">
      <div>
        <h1 class="mt-8 text-2xl font-bold text-gray-900 truncate"><%= @user.display_name %></h1>
        <span class="text-gray-800 text-1xl"> <%= @user&.profile&.title %> </span>
      </div>

      <div class="mt-8">
        <%= link_to edit_user_path(@user), class: 'btn-silver' do %>
          <%= icon_text 'Uppdatera', 'pencil' %>
        <% end if policy(@user).update? %>
      </div>
    </div>

    <!-- Tabs -->
    <div class="mt-6 sm:mt-2 2xl:mt-5">
      <div class="border-b border-gray-200">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <%= link_to "Presentation", user_path(@user), class: tab_classes(params[:tab].blank?) %>
            <%= link_to "AnstÃ¤llning", user_path(@user, tab: 'employee'), class: tab_classes(params[:tab] == 'employee') if policy(@user).employment? %>
          </nav>
        </div>
      </div>
    </div>

    <div class="mt-6 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <%= render 'presentation', project: @project if params[:tab].blank? %>
      <%= render 'employee', project: @project if params[:tab] == 'employee' and policy(@user).employment? %>
    </div>
  </article>
</div>
